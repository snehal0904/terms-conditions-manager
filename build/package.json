{
    "package_name": "pkg_tc",
    "core_files": {
        "src": "./terms-conditions-manager/src/*",
        "dest": "builds/"
    },
    "subextensions": [
        {
            "name": "com_tc",
            "repoUrl": "git@github.com:techjoomla/terms-conditions-manager.git",
            "src": "./terms-conditions-manager/src/components/com_tc/*",
            "dest": "builds/pkg_tc/components/",
            "zip_name": "com_tc",
            "format": "zip"
        },
        {
            "name": "plugins",
            "repoUrl": "git@github.com:techjoomla/terms-conditions-manager.git",
            "src": "./terms-conditions-manager/src/plugins/system/plug_system_tc/*",
            "dest": "builds/pkg_tc/plugins/",
            "zip_name": "plug_system_tc",
            "format": "zip"
        },
        {
            "name": "tjinstaller",
            "repoUrl": "git@git.tekdi.net:techjoomla/tjinstaller.git",
            "src": "./tjinstaller/src/*",
            "dest": "builds/",
            "format": "folder"
        }
    ],
    "versions": {
		"1.0.0":{
            "com_tc": {
                "version": "1.0.0",
                "branch": "master"
            },
            "tjinstaller": {
                "version": "1.1.0",
                "branch": "master"
            }
        }
    }
}
